#include <iostream>

using namespace std;

void reverse(char *str) {
  //search for \0
  char* end = str;
  int strlen_value = 0;

  while (*end != '\0') {
    end++;
    strlen_value++;
  }
  cout<<"size:"<<strlen_value<<endl;
  
}

int main() {
  reverse("HELLO");
  return EXIT_SUCCESS;
}
